<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <%= pluralize(@user.errors.size, 'error') %>

    <ul>
      <% @user.errors.full_messages.each do |erorr| %>
        <li>
          <%= erorr %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :name, 'Username' %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Sign up' %>
  </p>
<% end %>
